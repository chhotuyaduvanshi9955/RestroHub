<script>
let debounceTimer = null;
let selectedIndex = -1;

document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const searchBtn = document.getElementById('searchBtn');
    const gpsNavbarBtn = document.getElementById('gpsNavbarBtn');
    const autocompleteDropdown = document.getElementById('autocompleteDropdown');

    // Input event for autocomplete
    searchInput.addEventListener('input', function(e) {
        clearTimeout(debounceTimer);
        const query = e.target.value.trim();
        selectedIndex = -1;

        if (query.length === 0) {
            autocompleteDropdown.classList.remove('show');
            autocompleteDropdown.innerHTML = '';
            return;
        }

        debounceTimer = setTimeout(() => {
            fetchSuggestions(query);
        }, 200);
    });

    // Keyboard navigation
    searchInput.addEventListener('keydown', function(e) {
        const items = autocompleteDropdown.querySelectorAll('.autocomplete-item');
        
        if (e.key === 'ArrowDown') {
            e.preventDefault();
            selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
            updateSelection(items);
        } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            selectedIndex = Math.max(selectedIndex - 1, -1);
            updateSelection(items);
        } else if (e.key === 'Enter') {
            e.preventDefault();
            if (selectedIndex >= 0 && items[selectedIndex]) {
                selectSuggestion(items[selectedIndex].dataset.value);
            } else {
                performSearch();
            }
        } else if (e.key === 'Escape') {
            autocompleteDropdown.classList.remove('show');
        }
    });

    // Search button click
    searchBtn.addEventListener('click', performSearch);
    // GPS button: disable if geolocation not available
    if (gpsNavbarBtn) {
      if (!navigator.geolocation) {
        gpsNavbarBtn.disabled = true;
        gpsNavbarBtn.title = 'Geolocation not available';
      } else {
        gpsNavbarBtn.disabled = false;
      }
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.search-engine')) {
            autocompleteDropdown.classList.remove('show');
        }
    });

    // Update navbar city display from localStorage
    function updateNavCityDisplay() {
      const nameEl = document.getElementById('navCityName');
      const cityBadge = document.getElementById('navCity');
      const city = localStorage.getItem('currentCity');
      if (city && nameEl) {
        nameEl.textContent = city;
        if (city === 'Detecting...' || city === 'Detecting') {
          cityBadge.classList.add('detecting');
          cityBadge.querySelector('.city-icon').className = 'fas fa-spinner fa-spin city-icon';
        } else {
          cityBadge.classList.remove('detecting');
          cityBadge.querySelector('.city-icon').className = 'fas fa-map-marker-alt city-icon';
        }
      } else if (nameEl) {
        nameEl.textContent = 'Detect location';
        cityBadge.classList.remove('detecting');
        cityBadge.querySelector('.city-icon').className = 'fas fa-map-marker-alt city-icon';
      }
    }

    // Expose globally so other pages (locationSearch) can call to update immediately
    window.updateNavCityDisplay = updateNavCityDisplay;

    // Call on load and update on storage events (other tabs)
    updateNavCityDisplay();
    window.addEventListener('storage', updateNavCityDisplay);

    function performSearch() {
        const query = searchInput.value.trim();
        if (query.length > 0) {
            window.location.href = `/search?q=${encodeURIComponent(query)}`;
        }
    }
});

function fetchSuggestions(query) {
    console.log('Fetching suggestions for:', query);
    fetch(`/api/search/autocomplete?q=${encodeURIComponent(query)}`)
        .then(response => {
            if (!response.ok) throw new Error('Network response was not ok');
            return response.json();
        })
        .then(data => {
            const autocompleteDropdown = document.getElementById('autocompleteDropdown');
            console.log('API Response:', data);
            
            if (data.success && data.suggestions && data.suggestions.length > 0) {
                // prepend 'Use my current location' option
                const currentLocItem = `
                  <div class="autocomplete-item" onclick="useCurrentLocationFromNavbar()" data-value="__use_current_location__">
                    <span class="autocomplete-item-type city">gps</span>
                    <span class="autocomplete-item-text">Use my current location</span>
                  </div>`;

                autocompleteDropdown.innerHTML = currentLocItem + data.suggestions.map((suggestion, index) => `
                    <div class="autocomplete-item" data-value="${suggestion.value}" onclick="selectSuggestion('${suggestion.value.replace(/'/g, "\\'")}')">
                        <span class="autocomplete-item-type ${suggestion.type}">${suggestion.type}</span>
                        <span class="autocomplete-item-text">${escapeHtml(suggestion.value)}</span>
                    </div>
                `).join('');
                autocompleteDropdown.classList.add('show');
            } else {
                // Show sample suggestions if no matches
                autocompleteDropdown.innerHTML = `
                  <div class="autocomplete-item" onclick="useCurrentLocationFromNavbar()">
                    <span class="autocomplete-item-type city">gps</span>
                    <span class="autocomplete-item-text">Use my current location</span>
                  </div>
                  <div class="autocomplete-item" onclick="selectSuggestion('Delhi')">
                        <span class="autocomplete-item-type city">city</span>
                        <span class="autocomplete-item-text">Delhi (Try this)</span>
                    </div>
                    <div class="autocomplete-item" onclick="selectSuggestion('Mumbai')">
                        <span class="autocomplete-item-type city">city</span>
                        <span class="autocomplete-item-text">Mumbai (Try this)</span>
                    </div>
                    <div class="autocomplete-item" onclick="selectSuggestion('Bangalore')">
                        <span class="autocomplete-item-type city">city</span>
                        <span class="autocomplete-item-text">Bangalore (Try this)</span>
                    </div>
                `;
                autocompleteDropdown.classList.add('show');
            }
        })
        .catch(error => {
            console.error('Error fetching suggestions:', error);
            const autocompleteDropdown = document.getElementById('autocompleteDropdown');
            autocompleteDropdown.innerHTML = '';
            autocompleteDropdown.classList.remove('show');
        });
}

function selectSuggestion(value) {
    const searchInput = document.getElementById('searchInput');
    searchInput.value = value;
    document.getElementById('autocompleteDropdown').classList.remove('show');
  // Save chosen city for navbar and go to the location-search page
  try { localStorage.setItem('currentCity', value); } catch (e) {}
  window.location.href = `/location-search?city=${encodeURIComponent(value)}`;
}

function useCurrentLocationFromNavbar() {
  const searchInput = document.getElementById('searchInput');
  document.getElementById('autocompleteDropdown').classList.remove('show');
  if (!navigator.geolocation) {
    alert('Geolocation is not available in your browser');
    return;
  }
  navigator.geolocation.getCurrentPosition(function(position) {
    const lat = position.coords.latitude;
    const lng = position.coords.longitude;
    try { localStorage.setItem('currentCoords', JSON.stringify({ lat, lng })); localStorage.setItem('currentCity', 'Detecting...'); } catch(e){}
    // Redirect to location search with coords
    window.location.href = `/location-search?lat=${encodeURIComponent(lat)}&lng=${encodeURIComponent(lng)}`;
  }, function(err) {
    alert('Unable to access your location: ' + err.message);
  });
}

function goToLocationSearchFromNav() {
  const city = localStorage.getItem('currentCity');
  if (!city || city === 'Detecting...') {
    // If we don't have a readable city, open GPS flow
    useCurrentLocationFromNavbar();
    return;
  }
  window.location.href = `/location-search?city=${encodeURIComponent(city)}`;
}

