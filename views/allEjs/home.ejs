<%layout("/layouts/boilerplate") %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.80) 0%, rgba(118, 75, 162, 0.80) 100%), url('https://t3.ftcdn.net/jpg/01/12/25/74/360_F_112257403_IE7hN2cUR6W9PZvSQAwDOUUT7S7fbeGk.jpg') center/cover;
        color: white;
        padding: 150px 20px;
        text-align: center;
        position: relative;
        overflow: hidden;
        margin: -20px -15px 0 -15px;
        min-height: 450px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-attachment: scroll; /* fixed causes issues on some mobile browsers */
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 50%, rgba(102, 126, 234, 0.2) 0%, transparent 50%),
                    radial-gradient(circle at 80% 50%, rgba(118, 75, 162, 0.2) 0%, transparent 50%);
        animation: gradientShift 15s ease infinite;
    }

    @keyframes gradientShift {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.8;
        }
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        animation: fadeInUp 1s ease 0.3s both;
    }

    .hero-section h1 {
        font-size: 4.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        text-shadow: 3px 3px 15px rgba(0,0,0,0.4);
        line-height: 1.1;
        letter-spacing: -1px;
    }

    .hero-section .tagline {
        font-size: 1.8rem;
        margin-bottom: 40px;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.3);
        font-weight: 300;
        opacity: 0.95;
    }

    .hero-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        animation: fadeIn 1s ease 0.6s both;
    }

    .hero-buttons .btn {
        padding: 14px 45px;
        font-size: 1.1rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(0,0,0,0.25);
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-danger {
        background: linear-gradient(135deg, #fe424d 0%, #e03a41 100%);
        color: white;
    }

    .btn-danger:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(254, 66, 77, 0.5);
    }

    .btn-light {
        background-color: white;
        color: #667eea;
        border-color: white;
    }

    .btn-light:hover {
        background-color: #f0f0f0;
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(255,255,255,0.5);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Hackathon Winning Section */
    .hackathon-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 20px;
        margin: 60px -15px;
        position: relative;
        overflow: hidden;
    }

    .hackathon-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%;
    }

    .hackathon-section::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -5%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, transparent 70%);
        border-radius: 50%;
    }

    .hackathon-content {
        position: relative;
        z-index: 1;
        max-width: 1200px;
        margin: 0 auto;
    }

    .hackathon-content h2 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 50px;
        text-align: center;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
        letter-spacing: -0.5px;
    }

    .hackathon-badge {
        display: inline-block;
        background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
        color: #333;
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 0.9rem;
        box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
    }

    .hackathon-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
    }

    .hackathon-image {
        position: relative;
        animation: float 3s ease-in-out infinite;
    }

    .hackathon-image img {
        width: 100%;
        max-width: 450px;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        object-fit: cover;
        height: auto;
        border: 5px solid rgba(255,255,255,0.1);
        background: linear-gradient(135deg, #f5f7ff 0%, #e9ecef 100%);
    }

    .hackathon-image::before {
        /* content: 'üèÜ'; */
        position: absolute;
        top: -20px;
        right: -20px;
        font-size: 4rem;
        animation: bounce 2s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    .hackathon-text h3 {
        font-size: 2.5rem;
        margin-bottom: 30px;
        font-weight: 700;
    }

    .hackathon-text p {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 25px;
        opacity: 0.95;
    }

    .achievement-list {
        list-style: none;
        margin-bottom: 30px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .achievement-list li {
        padding: 12px 0;
        padding-left: 40px;
        position: relative;
        font-size: 1.05rem;
        line-height: 1.6;
    }

    .achievement-list li:before {
        content: '‚úì';
        position: absolute;
        left: 0;
        font-size: 1.5rem;
        font-weight: bold;
        color: #ffd700;
    }

    /* Features Section */
    .features-section {
        padding: 100px 20px;
        background: linear-gradient(180deg, #f9f9f9 0%, #ffffff 100%);
    }

    .features-section h2 {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 60px;
        color: #333;
        font-weight: 800;
        letter-spacing: -1px;
    }

    .feature-card {
        background: white;
        padding: 45px 30px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .feature-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        background: linear-gradient(135deg, #f5f7ff 0%, #fff 100%);
    }

    .feature-icon {
        font-size: 3.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 25px;
        display: inline-block;
    }

    .feature-card h3 {
        color: #333;
        margin-bottom: 15px;
        font-weight: 700;
        font-size: 1.4rem;
    }

    .feature-card p {
        color: #666;
        line-height: 1.7;
        font-size: 1rem;
    }

    /* Restaurants Preview */
    .restaurants-preview {
        padding: 100px 20px;
        background: white;
    }

    .restaurants-preview h2 {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 60px;
        color: #333;
        font-weight: 800;
        letter-spacing: -1px;
    }

    .preview-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0,0,0,0.05);
    }

    .preview-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

    .preview-card img {
        width: 100%;
        height: 280px;
        object-fit: cover;
        transition: transform 0.4s ease;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .preview-card:hover img {
        transform: scale(1.08);
    }

    .preview-content {
        padding: 25px;
    }

    .preview-content h3 {
        color: #333;
        margin-bottom: 12px;
        font-weight: 700;
        font-size: 1.3rem;
    }

    .preview-content p {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.85) 0%, rgba(118, 75, 162, 0.85) 100%), url('https://t3.ftcdn.net/jpg/01/12/25/74/360_F_112257403_IE7hN2cUR6W9PZvSQAwDOUUT7S7fbeGk.jpg') center/cover;
        color: white;
        padding: 80px 20px;
        text-align: center;
        margin: 60px -15px 0 -15px;
        position: relative;
        overflow: hidden;
        background-attachment: fixed;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        border-radius: 50%;
    }

    .cta-section h2 {
        font-size: 3rem;
        margin-bottom: 25px;
        font-weight: 800;
        position: relative;
        z-index: 1;
        letter-spacing: -0.5px;
    }

    .cta-section p {
        font-size: 1.3rem;
        margin-bottom: 35px;
        position: relative;
        z-index: 1;
        opacity: 0.95;
    }

    .cta-section .btn {
        position: relative;
        z-index: 1;
    }

    @media (max-width: 768px) {
        .hero-section {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.75) 0%, rgba(118, 75, 162, 0.75) 100%), url('https://t3.ftcdn.net/jpg/01/12/25/74/360_F_112257403_IE7hN2cUR6W9PZvSQAwDOUUT7S7fbeGk.jpg') center/cover !important;
            padding: 100px 20px;
            min-height: 450px;
        }

        .hero-section h1 {
            font-size: 2.8rem;
        }

        .hero-section .tagline {
            font-size: 1.3rem;
        }

        .hero-buttons {
            flex-direction: column;
            gap: 15px;
        }

        .hero-buttons .btn {
            width: 100%;
            padding: 12px 30px;
        }

        .hackathon-container {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .hackathon-content h2 {
            font-size: 2.5rem;
        }

        .hackathon-text h3 {
            font-size: 1.8rem;
        }

        .achievement-list {
            grid-template-columns: 1fr;
        }

        .features-section h2 {
            font-size: 2.2rem;
            margin-bottom: 40px;
        }

        .restaurants-preview h2 {
            font-size: 2.2rem;
            margin-bottom: 40px;
        }

        .cta-section h2 {
            font-size: 2.2rem;
        }

        .cta-section p {
            font-size: 1.1rem;
        }
    }
</style>

