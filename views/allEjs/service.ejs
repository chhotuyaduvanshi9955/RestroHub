<script>
    // Sample restaurant database (price is starting price)
    const sampleRestaurants = [
        { id: 1, name: "Taj Indian Kitchen", cuisine: "Indian", location: "New Delhi", rating: 4.8, price: 800, emoji: "ðŸ›" },
        { id: 2, name: "Pasta Paradise", cuisine: "Italian", location: "Mumbai", rating: 4.6, price: 800, emoji: "ðŸ" },
        { id: 3, name: "Dragon's Wok", cuisine: "Chinese", location: "Bangalore", rating: 4.5, price: 400, emoji: "ðŸ¥¢" },
        { id: 4, name: "Sushi Haven", cuisine: "Japanese", location: "Hyderabad", rating: 4.7, price: 1500, emoji: "ðŸ£" },
        { id: 5, name: "Burger Bliss", cuisine: "American", location: "Pune", rating: 4.4, price: 400, emoji: "ðŸ”" },
        { id: 6, name: "Spice Route", cuisine: "Indian", location: "Kolkata", rating: 4.9, price: 400, emoji: "ðŸŒ¶ï¸" },
        { id: 7, name: "Thai Street", cuisine: "Thai", location: "New Delhi", rating: 4.3, price: 400, emoji: "ðŸ¥˜" },
        { id: 8, name: "Pizza Palace", cuisine: "Italian", location: "Bangalore", rating: 4.5, price: 400, emoji: "ðŸ•" },
        { id: 9, name: "El Mariachi", cuisine: "Mexican", location: "Mumbai", rating: 4.2, price: 400, emoji: "ðŸŒ®" },
        { id: 10, name: "Beijing Express", cuisine: "Chinese", location: "New Delhi", rating: 4.6, price: 400, emoji: "ðŸ¥¡" },
    ];

    // Open discovery modal
    function openDiscoveryModal() {
        document.getElementById('discoveryModal').classList.add('active');
        loadAllRestaurants();
    }

    // Close discovery modal
    function closeDiscoveryModal() {
        document.getElementById('discoveryModal').classList.remove('active');
    }

    // Load all restaurants
    function loadAllRestaurants() {
        displayRestaurants(sampleRestaurants);
    }

    // Search restaurants
    function searchRestaurants() {
        const search = document.getElementById('searchQuery').value.toLowerCase();
        const cuisine = document.getElementById('cuisineFilter').value;
        const location = document.getElementById('locationFilter').value;
        const rating = parseFloat(document.getElementById('ratingFilter').value) || 0;
        const price = parseInt(document.getElementById('priceFilter').value) || 0;

        const results = sampleRestaurants.filter(r => {
            const matchSearch = search === '' || r.name.toLowerCase().includes(search) || r.cuisine.toLowerCase().includes(search);
            const matchCuisine = cuisine === '' || r.cuisine === cuisine;
            const matchLocation = location === '' || r.location === location;
            const matchRating = rating === 0 || r.rating >= rating;
            const matchPrice = price === 0 || r.price === price;

            return matchSearch && matchCuisine && matchLocation && matchRating && matchPrice;
        });

        displayRestaurants(results);

        // Show results info
        const resultsInfo = document.getElementById('resultsInfo');
        resultsInfo.style.display = 'block';
        resultsInfo.innerHTML = `
            <i class="fas fa-info-circle"></i>
            Found <strong>${results.length}</strong> restaurant${results.length !== 1 ? 's' : ''} matching your criteria
        `;
    }

    // Reset filters
    function resetFilters() {
        document.getElementById('searchQuery').value = '';
        document.getElementById('cuisineFilter').value = '';
        document.getElementById('locationFilter').value = '';
        document.getElementById('ratingFilter').value = '';
        document.getElementById('priceFilter').value = '';
        document.getElementById('resultsInfo').style.display = 'none';
        loadAllRestaurants();
    }

    function getPriceRangeText(price) {
        switch(price) {
            case 200: return 'â‚¹ 200-400';
            case 400: return 'â‚¹ 400-800';
            case 800: return 'â‚¹ 800-1500';
            case 1500: return 'â‚¹ 1500+';
            default: return 'â‚¹ ' + (price || 'â€”');
        }
    }

    // Display restaurants
    function displayRestaurants(restaurants) {
        const resultsContainer = document.getElementById('discoveryResults');

        if (restaurants.length === 0) {
            resultsContainer.innerHTML = `
                <div class="no-results">
                    <i class="fas fa-search"></i>
                    <p>No restaurants found</p>
                    <small>Try adjusting your search criteria</small>
                </div>
            `;
            return;
        }

        resultsContainer.innerHTML = restaurants.map(r => `
            <div class="discovery-card">
                <div class="discovery-card-img">
                    ${r.emoji}
                    <div class="rating-badge">
                        <i class="fas fa-star"></i> ${r.rating}
                    </div>
                </div>
                <div class="discovery-card-body">
                    <h4>${r.name}</h4>
                    <div class="discovery-card-info">
                        <div class="discovery-card-info-item">
                            <i class="fas fa-utensils"></i> ${r.cuisine}
                        </div>
                        <div class="discovery-card-info-item">
                            <i class="fas fa-map-pin"></i> ${r.location}
                        </div>
                        <div class="discovery-card-info-item">
                            <i class="fas fa-rupee-sign"></i>
                            ${getPriceRangeText(r.price)}
                        </div>
                    </div>
                    <div class="discovery-card-footer">
                        <button class="btn-details" onclick="viewRestaurantDetails(${r.id}, '${r.name}')">
                            <i class="fas fa-eye"></i> View
                        </button>
                        <button class="btn-favorite" onclick="addToFavorites('${r.name}')">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
        `).join('');
    }

    // View restaurant details
    function viewRestaurantDetails(id, name) {
        closeDiscoveryModal();
        setTimeout(() => {
            window.location.href = `/restaurant-details/${id}`;
        }, 300);
    }

    // Add to favorites
    function addToFavorites(name) {
        let favorites = JSON.parse(localStorage.getItem('restaurantFavorites')) || [];
        if (!favorites.includes(name)) {
            favorites.push(name);
            localStorage.setItem('restaurantFavorites', JSON.stringify(favorites));
            alert(`${name} added to favorites! â¤ï¸`);
        } else {
            alert(`${name} is already in your favorites!`);
        }
    }

    // Close modal on background click
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('discoveryModal');
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeDiscoveryModal();
            }
        });

        // Allow Enter key to search
        document.getElementById('searchQuery').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchRestaurants();
            }
        });
    });

    // FAQ Toggle Functionality
    function toggleFAQ(element) {
        const faqItem = element.parentElement;
        const isActive = faqItem.classList.contains('active');

        // Close all other FAQ items
        document.querySelectorAll('.faq-item').forEach(item => {
            item.classList.remove('active');
        });

        // Toggle current item
        if (!isActive) {
            faqItem.classList.add('active');
        }
    }

    // Handle other service buttons
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.service-card:not(:first-child) .service-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const card = this.closest('.service-card');
                const title = card.querySelector('h3').textContent;
                alert(`Learn more about: ${title}\n\nThis feature is coming soon!`);
            });
        });

        // Pricing Plan Click Handler
        document.querySelectorAll('.plan-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const planName = this.closest('.pricing-card').querySelector('.plan-name').textContent;
                <% if(user) { %>
                    alert(`You've selected the ${planName} plan! Processing...`);
                <% } else { %>
                    alert('Please sign up first to select a plan');
                    window.location.href = '/signup';
                <% } %>
            });
        });
    });
