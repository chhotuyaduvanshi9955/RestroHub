<%layout("/layouts/boilerplate") %>

<div class="service-section">
    <div class="service-hero">
        <h1>Our Services</h1>
        <p class="lead">Everything you need for a perfect dining experience</p>
    </div>

    <div class="service-content">
        <div class="row mt-5">
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Restaurant Discovery</h3>
                    <p>Browse thousands of restaurants across your city. Filter by cuisine, location, price range, and ratings to find your perfect match.</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3>Ratings & Reviews</h3>
                    <p>Read authentic reviews from fellow diners. Share your own experience and help others discover great food.</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <h3>Easy Reservations</h3>
                    <p>Book your table in advance with just a few clicks. Choose your preferred time and date.</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <h3>Exclusive Offers</h3>
                    <p>Get special discounts and exclusive offers from partner restaurants. Save while you dine!</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h3>24/7 Support</h3>
                    <p>Our customer support team is available round the clock to help you with any queries.</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-map-location-dot"></i>
                    </div>
                    <h3>Location Based</h3>
                    <p>Find restaurants near you instantly. Get directions and contact information easily.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .service-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0;
        text-align: center;
        margin: -20px -15px 40px -15px;
    }
    
    .service-hero h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .service-content {
        padding: 20px 0;
    }
    
    .service-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        text-align: center;
        height: 100%;
    }
    
    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .service-icon {
        font-size: 3rem;
        color: #fe424d;
        margin-bottom: 20px;
    }
    
    .service-card h3 {
        color: #333;
        margin-bottom: 15px;
        font-weight: bold;
    }
    
    .service-card p {
        color: #666;
        line-height: 1.6;
    }
</style>
