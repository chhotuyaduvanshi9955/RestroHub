<%layout('/layouts/boilerplate')%>

<div class="owner-page">
  <div class="owner-form-card" style="max-width:840px;margin:0 auto">
    <h2 class="owner-title">Add a Restaurant</h2>
    <div class="owner-sub">Add details about your restaurant. Image URL is optional (you can paste a link).</div>
    <% if(typeof message !== 'undefined' && message){ %>
      <div class="alert <%= error ? 'alert-danger' : 'alert-success' %>"><%= message %></div>
    <% } %>
    <form method="POST" action="/owner/add-restaurant">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Name</label>
          <input name="name" class="form-control" required />
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">City</label>
          <input name="city" class="form-control" required />
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Cuisine</label>
          <input name="cuisine" class="form-control" />
        </div>
        <div class="col-md-3 mb-3">
          <label class="form-label">Rating</label>
          <input name="rating" type="number" step="0.1" min="0" max="5" class="form-control" />
        </div>
        <div class="col-md-3 mb-3">
          <label class="form-label">Price Range</label>
          <input name="priceRange" type="number" min="0" class="form-control" placeholder="Starting price (e.g. 200)" />
          <div class="form-text">Enter the starting price (e.g. 200 for â‚¹200-400). Use 200, 400, 800, or 1500 for common tiers.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Address</label>
        <input name="address" class="form-control" />
      </div>
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="description" class="form-control" rows="4"></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Image URL (optional)</label>
        <input name="img" class="form-control" placeholder="https://... or /images/yourfile.jpg" />
        <div class="form-text">You can use an external URL or a local image path (e.g. <code>/images/filename.jpg</code>).</div>
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-success" type="submit">Add Restaurant</button>
        <a href="/owner/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
      </div>
    </form>
  </div>
</div>
