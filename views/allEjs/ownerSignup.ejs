<%layout('/layouts/boilerplate')%>

<div class="owner-page auth-page">
  <div class="owner-auth-card">
    <h2 class="owner-title">Owner Signup</h2>
    <div class="owner-sub">Create your owner account to add and manage restaurants.</div>
    <% if(typeof message !== 'undefined' && message){ %>
      <div class="alert <%= error ? 'alert-danger' : 'alert-success' %>"><%= message %></div>
    <% } %>
    <form method="POST" action="/owner/signup">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="name" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input name="confirmPassword" type="password" class="form-control" required />
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Create account</button>
        <a href="/owner/login" class="btn btn-outline-secondary small-link">Already have an account? Login</a>
      </div>
    </form>
  </div>
</div>
