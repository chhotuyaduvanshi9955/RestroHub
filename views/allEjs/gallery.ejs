        transition: transform 0.4s ease;
    }

    .gallery-item:hover .gallery-image img {
        transform: scale(1.12) rotate(2deg);
    }

    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
