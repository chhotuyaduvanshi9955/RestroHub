        font-weight: bold;
        font-size: 1.2rem;
    }

    .gallery-overlay p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .gallery-hero h1 {
