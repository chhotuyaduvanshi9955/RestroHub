<%layout('/layouts/boilerplate')%>

<div class="owner-page auth-page">
  <div class="owner-auth-card">
    <h2 class="owner-title">Owner Login</h2>
    <div class="owner-sub">Access your dashboard and manage your restaurants.</div>
    <% if(typeof message !== 'undefined' && message){ %>
      <div class="alert <%= error ? 'alert-danger' : 'alert-success' %>"><%= message %></div>
    <% } %>
    <form method="POST" action="/owner/login">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Login</button>
        <a href="/owner/signup" class="btn btn-outline-secondary small-link">Create an account</a>
      </div>
    </form>
  </div>
</div>
